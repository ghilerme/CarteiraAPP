<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6F177E"
    tools:context=".controller.Operacoes">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cadastrar Transação"
        android:textSize="34sp"
        android:fontFamily="@font/montserrat_regular"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textColorHint="#CCCCCC"
        android:backgroundTint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.072" />

    <Spinner
        android:id="@+id/spinner_tipo_transacao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:popupElevation="20dp"
        android:fontFamily="@font/montserrat_regular"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textColorHint="#CCCCCC"
        android:backgroundTint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.342" />


    <EditText
        android:id="@+id/editTextQtd"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:digits="0123456789,"
        android:hint="R$ 0,00"
        android:inputType="numberDecimal"
        android:textAlignment="textEnd"
        android:fontFamily="@font/montserrat_regular"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textColorHint="#CCCCCC"
        android:backgroundTint="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner_tipo_transacao" />

    <EditText
        android:id="@+id/editTextMotive"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="124dp"
        android:layout_marginEnd="16dp"
        android:hint="Insira uma descrição"
        android:inputType="textCapSentences"
        android:fontFamily="@font/montserrat_regular"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textColorHint="#CCCCCC"
        android:backgroundTint="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner_tipo_transacao" />

    <Button
        android:id="@+id/buttonSave"
        android:layout_width="200dp"
        android:layout_height="65dp"
        android:layout_marginTop="48dp"
        android:backgroundTint="#54C3B3"
        android:text="Salvar"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextMotive"
        app:layout_constraintVertical_bias="0.147" />

</androidx.constraintlayout.widget.ConstraintLayout>


